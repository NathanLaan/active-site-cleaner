{
  "manifest_version": 3,
  "name": "Active-Site-Cleaner",
  "version": "1.1.0",
  "description": "Web browser extension to quickly delete website cookies and data for the currently active website (active tab).",
  "developer": {
    "name": "Nathan Laan",
    "url": "https://github.com/NathanLaan/active-site-cleaner"
  },
  "permissions": [
    "cookies",
    "storage",
    "browsingData",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://github.com/NathanLaan/active-site-cleaner"
}
